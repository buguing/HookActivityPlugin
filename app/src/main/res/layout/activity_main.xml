<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试反射调用黑名单API"
        android:onClick="invokeBlackListApi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转未注册Activity"
        android:onClick="jump"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装文件中的插件"
        android:onClick="installPluginFromFile"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装资产目录中的插件"
        android:onClick="installPluginFromAssets"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转插件"
        android:onClick="jumpPlugin"/>

</LinearLayout>